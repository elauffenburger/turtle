    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Debug Build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${input:detectedBuildProgramDir}",
            "args": [
                "/opt/homebrew/bin/zig",
                ".",
                "zig-cache",
                "zig-cache"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ],
    "inputs": [
        {
            "id": "detectedBuildProgramDir",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "find ${workspaceFolder} -type file -name build | head -n 1"
            }
        }
    ]
}